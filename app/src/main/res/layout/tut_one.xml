<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imagine"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:src="@drawable/app_addwear"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="At the apps' first run you need to create at least three wearables for each type and than swype to the DONE button. Once you pressed it you'll go on."
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imagine"
        android:layout_marginTop="35dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/done"/>

</RelativeLayout>