<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_list">

            <TextView
                android:id="@+id/top_armadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="TOP-UP"
                android:textSize="20dp"
                android:fontFamily="@font/architects_daughter"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/top_outfit_viewpager"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/top_armadio"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/down_list">

            <TextView
                android:id="@+id/down_armadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="DOWN"
                android:textSize="20dp"
                android:fontFamily="@font/architects_daughter"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/down_outfit_viewpager"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/down_armadio"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/btnConfirmoutfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/confirmbutton"
                android:src="@drawable/confirmbutton" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>